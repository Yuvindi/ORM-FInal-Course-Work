<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="650.0" prefWidth="1050.0" style="-fx-background-color: #f0f2f5;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.Controllers.InstructorCourseController">
    <children>
        <VBox layoutX="50.0" layoutY="30.0" prefHeight="590.0" prefWidth="950.0" spacing="20.0" style="-fx-background-color: #ffffff; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 5);">
            <children>
                <HBox alignment="CENTER_LEFT" prefHeight="60.0" prefWidth="950.0" style="-fx-background-color: #2c3e50; -fx-background-radius: 10 10 0 0;">
                    <children>
                        <Label prefHeight="40.0" prefWidth="500.0" text="🔗 Instructor - Course Assignment" textFill="WHITE">
                            <font>
                                <Font name="System Bold" size="24.0" />
                            </font>
                            <padding>
                                <Insets left="20.0" />
                            </padding>
                        </Label>
                        <HBox alignment="CENTER_RIGHT" prefHeight="60.0" prefWidth="450.0" spacing="15.0">
                            <children>
                                <Button fx:id="btnBack" mnemonicParsing="false" onAction="#btnBackOnAction" style="-fx-background-color: #bdc3c7; -fx-text-fill: #2c3e50; -fx-background-radius: 5; -fx-font-size: 14px;" text="⬅️ Back">
                                    <font>
                                        <Font name="System Bold" size="14.0" />
                                    </font>
                                </Button>
                            </children>
                            <padding>
                                <Insets right="20.0" />
                            </padding>
                        </HBox>
                    </children>
                </HBox>

                <HBox alignment="TOP_LEFT" prefHeight="200.0" prefWidth="910.0" spacing="40.0">
                    <VBox prefHeight="200.0" prefWidth="600.0" spacing="15.0">
                        <children>
                            <HBox alignment="CENTER_LEFT" spacing="50.0">
                                <children>
                                    <Label prefWidth="150.0" text="Assignment ID:">
                                        <font>
                                            <Font size="16.0" />
                                        </font>
                                    </Label>
                                    <Label fx:id="lblID" prefHeight="35.0" prefWidth="300.0" style="-fx-border-color: #bdc3c7; -fx-border-radius: 5; -fx-padding: 5; -fx-background-color: #ecf0f1;" text="A001" textFill="#2c3e50">
                                        <font>
                                            <Font name="System Bold" size="16.0" />
                                        </font>
                                    </Label>
                                </children>
                            </HBox>

                            <HBox alignment="CENTER_LEFT" spacing="50.0">
                                <children>
                                    <Label prefWidth="150.0" text="Instructor:">
                                        <font>
                                            <Font size="16.0" />
                                        </font>
                                    </Label>
                                    <ComboBox fx:id="cmbInstructor" onAction="#cmbInstructorOnAction" prefHeight="35.0" prefWidth="300.0" promptText="Select Instructor" style="-fx-border-color: #bdc3c7; -fx-border-radius: 5; -fx-background-radius: 5; -fx-font-size: 16px;" />
                                </children>
                            </HBox>

                            <HBox alignment="CENTER_LEFT" spacing="50.0">
                                <children>
                                    <Label prefWidth="150.0" text="Course / Batch:">
                                        <font>
                                            <Font size="16.0" />
                                        </font>
                                    </Label>
                                    <ComboBox fx:id="cmbCourse" onAction="#cmbCourseOnAction" prefHeight="35.0" prefWidth="300.0" promptText="Select Course" style="-fx-border-color: #bdc3c7; -fx-border-radius: 5; -fx-background-radius: 5; -fx-font-size: 16px;" />
                                </children>
                            </HBox>

                            <HBox alignment="CENTER_LEFT" spacing="50.0">
                                <children>
                                    <Label prefWidth="150.0" text="Assignment Date:">
                                        <font>
                                            <Font size="16.0" />
                                        </font>
                                    </Label>
                                    <DatePicker fx:id="dateCourse" prefHeight="35.0" prefWidth="300.0" style="-fx-border-color: #bdc3c7; -fx-border-radius: 5; -fx-background-radius: 5; -fx-font-size: 16px;" promptText="Select Date" />
                                </children>
                            </HBox>
                        </children>
                    </VBox>

                    <VBox prefHeight="200.0" prefWidth="250.0" spacing="15.0">
                        <children>
                            <Button fx:id="btnAdd" mnemonicParsing="false" onAction="#btnAddOnAction" prefHeight="40.0" prefWidth="200.0" style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-background-radius: 5;" text="➕ Assign Course">
                                <font>
                                    <Font name="System Bold" size="14.0" />
                                </font>
                            </Button>
                            <Button fx:id="btnDelete" mnemonicParsing="false" onAction="#btnDeleteOnAction" prefHeight="40.0" prefWidth="200.0" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-background-radius: 5;" text="🗑️ Delete Assignment">
                                <font>
                                    <Font name="System Bold" size="14.0" />
                                </font>
                            </Button>
                            <Button fx:id="btnClear" mnemonicParsing="false" onAction="#btnClearOnAction" prefHeight="40.0" prefWidth="200.0" style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-background-radius: 5;" text="🧹 Clear Fields">
                                <font>
                                    <Font name="System Bold" size="14.0" />
                                </font>
                            </Button>
                        </children>
                        <HBox.margin>
                            <Insets top="10.0" />
                        </HBox.margin>
                    </VBox>
                </HBox>

                <VBox prefHeight="240.0" prefWidth="910.0">
                    <children>
                        <Label text="Current Course Assignments:">
                            <font>
                                <Font name="System Bold" size="18.0" />
                            </font>
                            <VBox.margin>
                                <Insets bottom="5.0" />
                            </VBox.margin>
                        </Label>
                        <TableView fx:id="tblInstructorCourse" prefHeight="200.0" prefWidth="910.0" style="-fx-background-color: white; -fx-border-color: #bdc3c7; -fx-border-width: 1; -fx-background-radius: 5;">
                            <columns>
                                <TableColumn fx:id="colId" prefWidth="80.0" text="ID" />
                                <TableColumn fx:id="colInstructor" prefWidth="200.0" text="Instructor" />
                                <TableColumn fx:id="colCourse" prefWidth="350.0" text="Course Batch" />
                                <TableColumn fx:id="colDate" prefWidth="250.0" text="Assignment Date" />
                            </columns>
                        </TableView>
                    </children>
                    <padding>
                        <Insets bottom="10.0" />
                    </padding>
                </VBox>
            </children>
            <padding>
                <Insets left="20.0" right="20.0" top="10.0" />
            </padding>
        </VBox>
    </children>
</AnchorPane>